{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/templates/**/*",
        "outDir": "dist/templates"
      }
    ]
  },
  "hooks": {
    "build:after": "cp -R src/templates dist/templates"
  }
}
